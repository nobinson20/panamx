matrix solve(matrix A, matrix b) {
    return inv(A) * b;
}

matrix combineTopDown(matrix a, matrix b) {
    int i;
    int j;
    int arow;
    int acol;
    int brow;
    int bcol;
    matrix new;

    arow = matrixHeight(a);
    acol = matrixWidth(a);
    brow = matrixHeight(b);
    bcol = matrixWidth(b);

    if (acol != bcol) {
        prints("Cannot combine matrices with different widths");
        return a;
    }

    new = <arow+brow, acol>;
    for (i = 0; i < arow; i++) {
        for (j = 0; j < acol; j++) {
            new[i][j] = a[i][j];
        }
    }
    for (i = arow; i < arow+brow; i++) {
        for (j = 0; j < bcol; j++) {
            new[i][j] = b[i-arow][j];
        }
    }
    return new;
}

